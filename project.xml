<project
    name = "fty-certificate-generator"
    description = "Generation internal certificates agent"
    script = "zproject.gsl"
    email = "EatonIPCOpenSource@eaton.com"
    url = "https://42ity.org"
    license = "GPL-2.0+"
    repository = "https://github.com/42ity/fty-certificate-generator"
    >

    <!-- Here we define for which package type we want to get a package -->
    <target name = "debian" />
    <target name = "redhat" />

    <!-- Here we define necessary steps for travis -->
    <target name = "travis" >
        <!-- option name = "clangformat_implem" value = "autotools" / -->l
        <option name = "use_cmake" value = "0" />
        <option name = "dist" value = "trusty" />
        <option name = "shadow_gcc" value = "2" />
        <!-- option name = "clangformat_require_good" value = "1" / -->
        <option name = "clangformat_allow_failures" value = "1" />
        <option name = "use_pkg_deps_prereqs_source" value = "0" />
        <option name = "test_memcheck" value = "0" />
        <option name = "require_gitignore" value = "1" />
    </target>

    <!-- Here we define necessary steps for jenkins -->
    <target name = "jenkins" >
        <option name = "agent_label" value = "devel-image &amp;&amp; x86_64" />
        <option name = "triggers_pollSCM" value = "H/2 * * * *" />
        <option name = "test_cppcheck" value = "1" />
        <option name = "build_docs" value = "1" />
        <option name = "dist_docs" value = "1" />
        <option name = "test_memcheck" value = "0" />

        <!-- Try to avoid avalanche rebuilds of same code on our CI -->
        <option name = "use_earlymilestone" value = "1" />
        <option name = "use_deploymilestone" value = "1" />
        <option name = "use_build_nonconcurrent" value = "1" />
        <option name = "use_checkout_explicit" value = "1" />
    </target>

    <!-- Here we define the license file -->
    <include filename = "license.xml" />
    <version major = "1" minor = "0" patch = "0" />
    <abi current = "1" revision = "0" age = "0" />

    <!-- Here we enable c++ -->
    <classfilename use-cxx = "true" source-extension = "cc" header-extension = "h"
        pretty-print = "no" keep-tree = "true" />

    <!-- Here we define dependencies, and dependencies of dependencies.... -->
    <use project = "fty-common-logging" libname = "libfty_common_logging" header = "fty_log.h"
        repository = "https://github.com/42ity/fty-common-logging.git"
        release = "master"
        test = "fty_common_logging_selftest" >

        <use project = "log4cplus" header = "log4cplus/logger.h" test = "appender_test"
            repository = "https://github.com/42ity/log4cplus.git"
            release = "1.1.2-FTY-master"
            />
    </use>

    <!-- fty-lib-certificate -->
    <use project = "fty-lib-certificate" libname = "libfty_lib_certificate"
        repository = "https://github.com/42ity/fty-lib-certificate.git"
        release = "master" >

        <use project = "openssl" header = "openssl/sha.h" debian_name = "libssl-dev"/>

    </use>

    <!-- fty-commom-mlm -->
    <use project = "fty-common-mlm" libname = "libfty_common_mlm" header = "fty_common_mlm.h"
        repository = "https://github.com/42ity/fty-common-mlm.git"
        release = "release/IPM-2.0.0"
        test = "fty_common_mlm_selftest" >

        <use project = "czmq"
            repository = "https://github.com/42ity/czmq.git"
            release = "release/IPM-2.0.0"
            min_major = "3" min_minor = "0" min_patch = "2" >

            <use project = "libzmq"
                repository = "https://github.com/42ity/libzmq.git"
                release = "release/IPM-2.0.0" >

                <use project = "libsodium" prefix = "sodium"
                    repository = "https://github.com/42ity/libsodium.git"
                    release = "release/IPM-2.0.0"
                    test = "sodium_init"
                    />
            </use>
        </use>

        <use project = "cxxtools" test = "cxxtools::Utf8Codec::Utf8Codec" header = "cxxtools/allocator.h"
            repository = "https://github.com/42ity/cxxtools.git"
            release = "release/IPM-2.0.0"
            />

        <use project = "malamute" min_major = "1" test = "mlm_server_test"
            repository = "https://github.com/42ity/malamute.git"
            release = "release/IPM-2.0.0"
            />

        <use project = "openssl" header = "openssl/sha.h" debian_name = "libssl-dev"/>

        <use project = "fty-common" libname = "libfty_common" header = "fty_common.h"
            repository = "https://github.com/42ity/fty-common.git"
            release = "release/IPM-2.0.0"
            test = "fty_common_selftest" >

            <use project = "fty-common-logging" libname = "libfty_common_logging" header = "fty_log.h"
                repository = "https://github.com/42ity/fty-common-logging.git"
                release = "release/IPM-2.0.0"
                test = "fty_common_logging_selftest" >

                <use project = "log4cplus" header = "log4cplus/logger.h" test = "appender_test"
                    repository = "https://github.com/42ity/log4cplus.git"
                    release = "release/IPM-2.0.0"
                    />
           </use>
        </use>

        <use project = "fty-common-logging" libname = "libfty_common_logging" header = "fty_log.h"
            repository = "https://github.com/42ity/fty-common-logging.git"
            release = "release/IPM-2.0.0"
            test = "fty_common_logging_selftest" >

            <use project = "log4cplus" header = "log4cplus/logger.h" test = "appender_test"
                repository = "https://github.com/42ity/log4cplus.git"
                release = "release/IPM-2.0.0"
                />
        </use>
    </use>

    <!-- Security wallet -->
    <use project = "fty-security-wallet" libname = "libfty_security_wallet" header = "fty_security_wallet.h"
        repository = "https://github.com/42ity/fty-security-wallet.git"
        release = "release/IPM-2.0.0"
        test = "fty_security_wallet_selftest" >

        <use project = "fty-common-mlm" libname = "libfty_common_mlm" header = "fty_common_mlm.h"
            repository = "https://github.com/42ity/fty-common-mlm.git"
            release = "release/IPM-2.0.0"
            test = "fty_common_mlm_selftest" >

            <use project = "czmq"
                repository = "https://github.com/42ity/czmq.git"
                release = "release/IPM-2.0.0"
                min_major = "3" min_minor = "0" min_patch = "2" >

                <use project = "libzmq"
                    repository = "https://github.com/42ity/libzmq.git"
                    release = "release/IPM-2.0.0" >

                    <use project = "libsodium" prefix = "sodium"
                        repository = "https://github.com/42ity/libsodium.git"
                        release = "release/IPM-2.0.0"
                        test = "sodium_init"
                        />
                </use>
            </use>

            <use project = "cxxtools" test = "cxxtools::Utf8Codec::Utf8Codec" header = "cxxtools/allocator.h"
                repository = "https://github.com/42ity/cxxtools.git"
                release = "release/IPM-2.0.0"
                />

            <use project = "malamute" min_major = "1" test = "mlm_server_test"
                repository = "https://github.com/42ity/malamute.git"
                release = "release/IPM-2.0.0"
                />

            <use project = "openssl" header = "openssl/sha.h" debian_name = "libssl-dev"/>

            <use project = "fty-common" libname = "libfty_common" header = "fty_common.h"
                repository = "https://github.com/42ity/fty-common.git"
                release = "release/IPM-2.0.0"
                test = "fty_common_selftest" >

                <use project = "fty-common-logging" libname = "libfty_common_logging" header = "fty_log.h"
                    repository = "https://github.com/42ity/fty-common-logging.git"
                    release = "release/IPM-2.0.0"
                    test = "fty_common_logging_selftest" >

                    <use project = "log4cplus" header = "log4cplus/logger.h" test = "appender_test"
                        repository = "https://github.com/42ity/log4cplus.git"
                        release = "release/IPM-2.0.0"
                        />
                </use>
            </use>

            <use project = "fty-common-logging" libname = "libfty_common_logging" header = "fty_log.h"
                repository = "https://github.com/42ity/fty-common-logging.git"
                release = "release/IPM-2.0.0"
                test = "fty_common_logging_selftest" >

                <use project = "log4cplus" header = "log4cplus/logger.h" test = "appender_test"
                    repository = "https://github.com/42ity/log4cplus.git"
                    release = "release/IPM-2.0.0"
                    />
            </use>
        </use>
    </use>

    <!-- Note: Certificate generator -->
    <class name = "certgen_certificate_generator_server" private = "1" selftest = "0"/>
    <class name = "certgen_certificate_generator_config" private = "1" selftest = "0"/>
    
    <class name = "certgen_accessor" selftest = "0"/>

    <class name = "fty-certificate-generator-agent"/>
    <main  name = "fty-certificate-generator" service = "1"/>
</project>
